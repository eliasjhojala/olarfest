<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title>Olarfest</title>
    
    <link rel="stylesheet" type="text/css" href="/app.css">
    <script src="/jquery.js"></script>
    <script src="/app.js"></script>
    <link rel="shortcut icon" type="image/png" href="/favicon.png">
    
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-84316972-1', 'auto');
      ga('send', 'pageview');
    </script>
    
    <%= yield_content :includes %>
  </head>
  
  <%
    links = [
      ["Etusivu", "siteSubject"],
      ["Yleisölle", "yleiso"],
      ["Tekijäksi", "rekryTitle"],
      ["Olarfest ry", "yhdistys"],
      ["Lahjoita", "lahjoita"],
      ["Yhteystiedot", "contact"]
    ];
  %>
  
  <body>
    <div id="linkbar">
      <div id="linkBarLinks">
        <% links.each do |text, element| %>
          <a href="#<%= element %>" class="close-menubox">
            <%= text %>
          </a>
        <% end %>
      </div>
      <span id="menuBoxIcon">
        <a href class="toggle-menubox material-icons"></a>
      </span>
      
      <div id="title">
        <a href="#teaser">Olarfest</a>
      </div>
    </div>
    
    <%= yield %>
  </body>
</html>
